{
  "name": "sftp-lambda",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf node_modules",
    "test:ci": "cd integration-test; node integration-test.js",
    "lint": "eslint .",
    "lintfix": "eslint . --fix",
    "precommit": "pretty-quick --staged",
    "test": "mkdir -p test-results/results/ && jest",
    "test:manual-pull": "cd manual-pull-test && ./docker_sftpd.sh && npx run pull && docker-compose down"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "braces": ">=2.3.1",
    "chalk": "3.0.0",
    "dotenv": "^8.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "0.14.3",
    "jest": "24.9.0",
    "jest-junit": "8.0.0",
    "jest-mock-console": "^0.4.0",
    "prettier": "1.14.2",
    "pretty-quick": "1.6.0",
    "readline-sync": "^1.4.10",
    "serverless": "^1.52.0",
    "serverless-dotenv-plugin": "^2.1.1",
    "serverless-offline": "5.12.0",
    "serverless-offline-sqs": "3.0.1",
    "serverless-plugin-existing-s3": "2.4.0",
    "serverless-pseudo-parameters": "2.5.0",
    "serverless-s3-local": "0.5.4",
    "shelljs": "0.8.3",
    "wait-port": "0.2.2",
    "rimraf": "2.6.3"
  },
  "dependencies": {
    "aws-sdk": "^2.298.0",
    "ssh2": "0.8.9",
    "ssh2-promise": "0.1.7"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "handlers/**/*.js",
      "!**/wip_*.js"
    ],
    "automock": false,
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-mock-console/dist/setupTestFramework.js"
    ]
  },
  "jest-junit": {
    "output": "./test-results/results/test-results.xml"
  },
  "files": [
    "src/**"
  ]
}
