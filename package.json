  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "handlers/**/*.js",
      "!src/**/mock-helpers/*.js"
    ],
    "automock": false,
    "reporters": [
      "default",
      "jest-junit"
